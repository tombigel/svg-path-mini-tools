{
  "name": "svg-path-mini-tools",
  "version": "0.2.6",
  "description": "A collection of minimalistic SVG path manipulation utilities",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "lint": "npx eslint ./src",
    "build": "npm-run-all lint build:ts build:minify",
    "build:ts": "esbuild src/index.ts --bundle --sourcemap --outfile=dist/index.js",
    "build:minify": "esbuild dist/index.js --minify --sourcemap --outfile=dist/index.min.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tombigel/svg-path-mini-tools.git"
  },
  "keywords": [
    "svg",
    "path",
    "scale",
    "parse"
  ],
  "author": "Tom Bigelajzen <svgutils@tombigel.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tombigel/svg-path-mini-tools/issues"
  },
  "homepage": "https://github.com/tombigel/svg-path-mini-tools#readme",
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.11",
    "eslint": "^8.57.0",
    "esbuild": "^0.17.0",
    "globals": "^15.2.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  }
}
